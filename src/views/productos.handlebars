<div id="index">
    <h1>BIENVENIDO {{userName}} {{rol}}</h1>
    <a id = logout href="/api/sessions/logout">Cerrar sesion</a href="">
    <a href="/cart/{{idCart}}">ir al carrito</a>
    <h3 id = "idCart" style="display: none">{{idCart}}</h3>
    <a href="/current">Info de usuario</a>
    <div id="productos">
        {{#if rol}}
            <form id="addProd" action="/api/products" method="post">
                {{!-- <label>prodId</label> --}}
                {{!-- <input name ="prodId" type="text"> --}}
                <label>Title</label>
                <input name ="title" type="text">
                <label>Description</label>
                <input name ="description" type="text">
                <label>Code</label>
                <input name ="code" type="text">
                <label>Price</label>
                <input name ="price" type="number">
                <label>Status</label>
                <input name ="status" type="boolean">
                <label>Stock</label>
                <input name ="stock" type="number">
                <label>Category</label>
                <input name ="category" type="text">
                {{!-- <label>thumbnails</label>
                <input name ="thumbnails" type="text"> --}}
                <input type="submit" value="Agregar" id = "Agregar">
            </form>
        {{/if}}
        {{#each result}}
            <div class="prod">
                <div class = "info">
                    <p>{{this.title}}</p>
                    <p>{{this.description}}</p>
                    <p>{{this.category}}</p>
                    <p>{{this.price}}</p>
                    <p>stock: {{this.stock}}</p>
                </div>
                <div class = "agregar">
                    <input type="number" class="cant" value="1">
                    <button class="add" name={{this._id}}>Add</button>
                </div>
            </div>
        {{/each}}
    </div>
    <script src="/js/addProds.js"></script>  
</div>