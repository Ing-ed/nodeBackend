<div id="index">
    <h1>BIENVENIDO {{userName}} {{rol}}</h1>
    <a id = logout href="/api/sessions/logout">Cerrar sesion</a href="">
    <a href="/cart/{{idCart}}">ir al carrito</a>
    <h3 id = "idCart" style="display: none">{{idCart}}</h3>
    <a href="/current">Info de usuario</a>
    {{#if rol}}
        <a href="/crearProducto">Ingresar nuevo producto</a>
    {{/if}}
    <div id="productos">
        {{#each result}}
            <div class="prod">
                <div class = "info">
                    <p>{{this.title}}</p>
                    <p>{{this.description}}</p>
                    <p>{{this.category}}</p>
                    <p>{{this.price}}</p>
                </div>
                <div class = "agregar">
                    <input type="number" class="cant" value="1">
                    <button class="add" name={{this._id}}>Add</button>
                </div>
            </div>
        {{/each}}
    </div>
    <script src="/js/addProds.js"></script>  
</div>